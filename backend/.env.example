# =============================================================================
# Todo Full-Stack Web Application - Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=todo-skills-backend
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=1

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL / Neon Serverless)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/todo_db
# For Neon: postgresql://user:password@ep-xxx.region.aws.neon.tech/todo_db?sslmode=require

# -----------------------------------------------------------------------------
# Authentication (JWT)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# -----------------------------------------------------------------------------
# Password Hashing
# -----------------------------------------------------------------------------
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_LOGIN_ATTEMPTS=5

# -----------------------------------------------------------------------------
# AI Service (Optional - graceful degradation if unavailable)
# -----------------------------------------------------------------------------
AI_SERVICE_URL=
AI_SERVICE_API_KEY=
AI_SERVICE_TIMEOUT_SECONDS=30

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
METRICS_ENABLED=true
METRICS_PORT=9090

# -----------------------------------------------------------------------------
# CORS (comma-separated origins)
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# Skill Execution
# -----------------------------------------------------------------------------
SKILL_DEFAULT_TIMEOUT_SECONDS=30
SKILL_MAX_RETRIES=3
